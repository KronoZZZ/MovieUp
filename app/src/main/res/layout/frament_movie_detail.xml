<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieImage"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/default_small_margin"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="@dimen/app_text_size_large"
                android:textStyle="bold"
                android:transitionName="@string/movie_transition_name_title" />

            <TextView
                android:id="@+id/movieDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_small_margin"
                android:text="Description"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/app_text_size_medium"
                android:transitionName="@string/movie_transition_name_poster" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>